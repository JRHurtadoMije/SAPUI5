<mvc:View controllerName="com.jr.jrhub.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:t="sap.tnt">
    <t:ToolPage id="toolPage" sideExpanded="false">
        <t:header>
            <t:ToolHeader id="toolHeader">
                <m:Button id="btnToggleSidenav" icon="sap-icon://menu2" type="Transparent" press=".onToggleSideNav" />
                <m:Title id="appTitle" text="{i18n>appTitle}" level="H3" />
                <m:ToolbarSpacer id="thSpacer" />
                
            </t:ToolHeader>
        </t:header>

        <t:sideContent>
            <t:SideNavigation  id="sideNav">
                <t:NavigationList id="sideList" itemSelect=".onItemSelect">
                    <t:NavigationListItem id="itemEj1" text="Básico" key="basico" icon="sap-icon://hello-world"/>
                    <t:NavigationListItem id="itemEj2" text="Básico-Intermedio" key="intermedio" icon="sap-icon://list"/>
                    <t:NavigationListItem id="itemEj3" text="Gráficos Avanzados" key="graficos" icon="sap-icon://multiple-bar-chart"/>
                    <t:NavigationListItem id="itemEj4" text="Lógica SAP UI5" key="logica" icon="sap-icon://filter-fields"/>
                    <t:NavigationListItem id="itemEj5" text="Tres en Raya" key="tres" icon="sap-icon://puzzle"/>
                    <t:NavigationListItem id="itemEj6" text="Hoja de gastos" key="gastos" icon="sap-icon://my-sales-order"/>
                </t:NavigationList>
            </t:SideNavigation>
        </t:sideContent>

        <t:mainContents>
            <m:NavContainer id="navContainer" class="welcomeCard">
                <m:Page id="homePage" title="Bienvenido al Hub de Ejercicios SAPUI5">
                    <m:content>
                        <m:VBox id="welcomBox" class="sapUiSmallMargin sapUiMediumMarginBeginEnd" >
                            <m:Image id="welcomeLogo" src="./assets/images/logo.webp"  height="180px"/>
                            <m:Title id="welcomeTitle" text="Bienvenido al Hub de ejercicios, selecciona un Ejercicio en el menú lateral" level="H2"/>
                        </m:VBox>
                    </m:content>
                    
                </m:Page>
            </m:NavContainer>
            
        </t:mainContents>
    </t:ToolPage>
</mvc:View>